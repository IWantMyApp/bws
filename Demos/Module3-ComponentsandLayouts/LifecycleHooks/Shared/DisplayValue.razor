@counterOutput

@code {

    [Parameter]
    public int Counter { get; set; }

    private string counterOutput;


    public async override Task SetParametersAsync(ParameterView parameters)
    {
        Console.WriteLine($"Counter parameter before being set is {Counter}");
        
        // Calling base.SetParametersAsync sets the parameter
        await base.SetParametersAsync(parameters);
        counterOutput = Counter.ToString() + " and counting...";
        Console.WriteLine($"SetParametersAsync lifecycle hook called and the value of counterOutput is {counterOutput}");
    }


    protected override void OnParametersSet()
    {
        Console.WriteLine($"OnParametersSet is {Counter}");
        counterOutput = Counter.ToString() + " and counting...";
        Console.WriteLine($"OnParametersSet lifecycle hook called and the value of counterOutput is {counterOutput}");

    }

}